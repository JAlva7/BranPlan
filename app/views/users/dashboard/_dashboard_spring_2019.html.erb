<div>
  <table class="table">
    <thead id="thead">
      <tr>
        <th style="padding-right: 10px;">Course</th>
        <th style="padding-right: 50px;">Code</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @courses_spring_2019.each do |course| %>
        <tr>
          <td><%= link_to course.name, course %></td>
          <td><%= course.code %></td>
          <td><button id="spring_unenroll" class="enroll-button btn btn-danger"  data-course_id = <%= course.id %> data-term_id = 5>Remove</button></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
$('#spring_unenroll').on("click", function(){
    $.ajax({
      type:'POST',
      url: "/enrollments/unenroll",
      data: {'course_id' : this.dataset.course_id,'term_id' : this.dataset.term_id}
    });
      }).trigger('change');
</script>
