<p id="notice"><%= notice %></p>

<h1>Course Requirements</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Requirement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_requirements.each do |course_requirement| %>
      <tr>
        <td><%= course_requirement.course_id %></td>
        <td><%= course_requirement.requirement %></td>
        <td><%= link_to 'Show', course_requirement %></td>
        <td><%= link_to 'Edit', edit_course_requirement_path(course_requirement) %></td>
        <td><%= link_to 'Destroy', course_requirement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

